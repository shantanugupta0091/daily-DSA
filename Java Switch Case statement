1. solution



class Solution {
  public:
    double switchCase(int choice, vector<double> &arr) {
        
        //double area;
        //double pi = M_PI;
        
        switch(choice){
            case 1:
                return M_PI * arr[0] * arr[0];
                break;
            
            case 2:
                return arr[0]*arr[1];
                break;    
        }
        
        //return area;
        
        
        
    }
};





2. solution




class Solution {
  public:
    double switchCase(int choice, vector<double> &arr) {
        
        double area;
        double pi = M_PI;
        
        switch(choice){
            case 1:
                area = pi * arr[0] * arr[0];
                break;
            
            case 2:
                area = arr[0]*arr[1];
                break;    
        }
        
        return area;
        
        
        
    }
};
